{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "parserOptions": {
        "sourceType": "script"
    },
    "env": {
        "node": false
    },
    "rules": {
        "indent": ["error", 4],
        "semi": "off",
        "space-before-function-paren": ["error", "never"]
    }
}
